<!-- templates/cabecera.html.twig -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <!-- Logo de la tienda -->
        <a class="navbar-brand" href="{{ path('home') }}">
{#            <img src="path/to/your/logo.png" alt="Electro Gamer" style="height: 40px;">#}Electro Gamer
        </a>
        <!-- Botón de hamburguesa y todas las categorías -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            <span>Todas las categorías</span>
        </button>
        <!-- Elementos de la barra de navegación -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item d-flex align-items-center">
                    <a class="nav-link" href="#"><i class="bi bi-list"></i> Todas las categorías</a>
                </li>
            </ul>
            <!-- Barra de búsqueda central (opcional) -->
            <form class="d-flex mx-auto">
                <div class="input-group">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">Todo el catálogo</button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">Categoría 1</a></li>
                        <li><a class="dropdown-item" href="#">Categoría 2</a></li>
                        <li><a class="dropdown-item" href="#">Categoría 3</a></li>
                    </ul>
                    <input class="form-control" type="search" placeholder="Buscar" aria-label="Search">
                    <button class="btn btn-outline-secondary" type="submit"><i class="bi bi-search"></i></button>
                </div>
            </form>
            <!-- Iconos de cuenta y carrito -->
            <ul class="navbar-nav ml-auto mb-2 mb-lg-0">
                <li class="nav-item d-flex align-items-center">
                    {% if is_granted('ROLE_USER') %}
                        <a class="nav-link" href="{{ path('perfil') }}"><i class="bi bi-person"></i>Mi cuenta</a>
                    {% else %}
                        <a class="nav-link" href="{{ path('app_login') }}"><i class="bi bi-person"></i>Iniciar sesión</a>
                    {% endif %}
                </li>
                <li class="nav-item d-flex align-items-center">
                    <a class="nav-link position-relative" href="#">
                        <i class="bi bi-cart"></i>
                        <span class="position-relative badge rounded-pill bg-danger cart-badge">0</span>
                        Mi carrito
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>