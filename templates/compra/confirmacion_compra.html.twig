{% extends 'base.html.twig' %}

{% block title %}Confirmación de Compra{% endblock %}

{% block body %}
    <div class="container my-5">
        <h2>¡Compra realizada con éxito!</h2>
        <p>Gracias por tu compra. A continuación, se muestran los detalles de tu pedido:</p>

        <div class="card mt-4">
            <div class="card-header">
                <h3>Detalles del Pedido</h3>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    {% if compras is not empty %}
                        {% for compra in compras %}
                            {% set precioUnitario = (compra.unidades != 0 ? (compra.precio_compra / compra.unidades) : 0) %}
                            <li class="list-group-item">
                                <div class="d-flex justify-content-between">
                                    <span>{{ compra.idProducto.nombre }}</span>
                                    <span>{{ compra.unidades }} x {{ precioUnitario | number_format(2, ',', '.') }} €</span>
                                </div>
                                <div class="mt-1">
                                    <small class="text-muted">Precio total: {{ compra.precio_compra | number_format(2, ',', '.') }} €</small>
                                </div>
                            </li>
                        {% endfor %}
                    {% else %}
                        <li class="list-group-item">No hay compras registradas para este pedido.</li>
                    {% endif %}
                </ul>
            </div>
            <div class="card-footer">
                {# Calcular el total #}
                {% set total = 0 %}
                {% for compra in compras %}
                    {% set total = total + compra.precio_compra %}
                {% endfor %}

                {# Calcular el total con IVA #}
                {% set totalConIVA = total * 1.21 %}

                <h4>Total: {{ total | number_format(2, ',', '.') }} €</h4>
                <h4>Total con IVA (21%): {{ totalConIVA | number_format(2, ',', '.') }} €</h4>
            </div>
        </div>

        <a href="{{ path('home') }}" class="btn btn-primary mt-4">Volver a la Página Principal</a>
    </div>
{% endblock %}
